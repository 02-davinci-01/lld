{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "build"]
}
